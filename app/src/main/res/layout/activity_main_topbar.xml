<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:id="@+id/top_bar"
                android:layout_height="wrap_content"
                android:background="#86202020"
                android:orientation="horizontal"
                android:weightSum="3"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"

                tools:context=".ui.main.MainActivity">


    <Button android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:id="@+id/but_timer"
            android:text="Timer"
            android:drawablePadding="10dp"
            android:background="#00FFFFFF"
            android:drawableLeft="@drawable/ic_timer_24dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
    />

    <Button android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/but_apps"
            android:text="Apps"
            android:drawableLeft="@drawable/ic_apps_24dp"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
    />


    <Button android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:id="@+id/but_settings"
            android:background="#00FFFFFF"
            android:text="Settings"
            android:drawablePadding="10dp"
            android:drawableRight="@drawable/ic_settings_24dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
    />


</RelativeLayout>
