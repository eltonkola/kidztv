<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#99000000"
              android:id="@+id/root_timer"
              android:orientation="vertical"
              android:gravity="center"
              android:visibility="gone"
              tools:context=".ui.MainActivity">

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:id="@+id/timercreen_title"
              android:textSize="20sp"
              android:layout_centerInParent="true"
              android:text="Change timer options"
    />

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:id="@+id/timer_settings_timeout"
              android:paddingTop="16sp"
              android:paddingBottom="16sp"
              android:textSize="16sp"
              android:layout_below="@+id/lockscreen_title"
              android:layout_centerInParent="true"
              android:text="Auto dismiss in 10 seconds.."
    />

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="TODO"
    />


</LinearLayout>