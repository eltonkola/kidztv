<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/main_bg"
              android:orientation="vertical"
              android:id="@+id/root_view"
              tools:context=".ui.MainActivity">

    <LinearLayout android:orientation="horizontal"
                  android:layout_width="match_parent"
                  android:layout_height="0dp"
                  android:layout_weight="1">

        <RelativeLayout android:id="@+id/container"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

            <com.devbrackets.android.exomedia.ui.widget.VideoView
                    android:id="@+id/video_player"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"/>


            <include layout="@layout/activity_main_apps" />

            <include layout="@layout/activity_main_lock" />
            <include layout="@layout/activity_main_timer_settings" />
            <include layout="@layout/activity_main_timer_lock" />


        </RelativeLayout>


        <include layout="@layout/activity_main_sidebar" />


    </LinearLayout>


    <!--app:useDefaultControls="true"-->


    <androidx.recyclerview.widget.RecyclerView

            android:id="@+id/video_grid"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:clipChildren="false"
            android:clipToPadding="false"/>


</LinearLayout>